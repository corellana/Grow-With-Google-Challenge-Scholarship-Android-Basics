<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image"
            android:contentDescription="@string/image_start_view"
            android:scaleType="centerCrop"
            android:src="@drawable/start_image" />

        <TextView
            android:id="@+id/message_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_messages"
            android:layout_marginLeft="@dimen/margin_left_messages"
            android:layout_marginRight="@dimen/margin_right_messages"
            android:layout_marginTop="@dimen/margin_top_messages"
            android:text=""
            android:textSize="@dimen/text_size_messages"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/robotolight"/>

    </LinearLayout>

</ScrollView>